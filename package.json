{
  "name": "cvs-svc-test-number",
  "version": "0.0.1",
  "description": "A microservice generating test numbers.",
  "main": "handler.js",
  "engines": {
    "node": "14.*",
    "npm": "5.6.0"
  },
  "scripts": {
    "start": "serverless offline start",
    "build": "tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "debug": "export SLS_DEBUG=* && BRANCH=local node --inspect ./node_modules/serverless/bin/serverless offline start",
    "build:dev": "tsc && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": " BRANCH=local jest --testMatch=\"**/*.unitTest.ts\" --forceExit",
    "test-i": "npm run test:integration -- --runInBand --globalSetup='./scripts/setup.ts' --globalTeardown='./scripts/teardown.ts'",
    "test:integration": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\"",
    "lint": "tslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write .",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME} && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci --production && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip .",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "sonar-scanner": "npm run coverage && sonar-scanner",
    "coverage": "npm t -- --coverage --runInBand",
    "prepush": "npm run coverage && npm run build && npm run test-i",
    "audit": "npm audit",
    "tools-setup": "node_modules/.bin/sls dynamodb install"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-lambda": "^1.0.5",
    "aws-sdk": "^2.562.0",
    "aws-xray-sdk": "^2.4.0",
    "fsevents": "^2.3.2",
    "joi": "^14.3.1",
    "node-yaml": "^3.2.0",
    "path-parser": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-register": "^1.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/aws-lambda": "^8.10.34",
    "@types/jest": "^24.0.21",
    "@types/jest-plugin-context": "^2.9.2",
    "@types/joi": "^14.3.4",
    "@types/lambda-tester": "^3.6.1",
    "@types/node": "^12.12.5",
    "@types/uuid": "^3.4.6",
    "audit-filter": "^0.5.0",
    "aws-lambda-mock-context": "^3.2.1",
    "babel-jest": "^24.8.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "jest-plugin-context": "^2.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "lambda-tester": "^4.0.1",
    "prettier": "^2.3.2",
    "serverless": "^2.45.2",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^5.12.1",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "swagger-jsdoc": "^3.4.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-jsdoc-rules": "^0.2.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "testURL": "http://localhost"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run security-checks && npm run audit && npm run lint && npm run format",
      "pre-push": "npm run prepush"
    }
  }
}
